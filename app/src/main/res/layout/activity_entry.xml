<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".ui.EntryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common__vertical_margin"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/entry_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/common__horizontal_margin"
        android:layout_marginEnd="@dimen/common__horizontal_margin"
        android:layout_marginBottom="@dimen/common__vertical_margin"
        android:background="@drawable/bg_entry_button"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/entry__button_title"/>

</LinearLayout>